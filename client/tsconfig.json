{
  "compilerOptions": {
    "target": "es5",
    "module": "es2020",
    "allowJs": true,
    "jsx": "react",
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true ,
    "types": ["node", "jest"],
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.tsx"
  ],
}
